record(longin, "$(Sys)$(Dev)Val:Free-I"){
   field(DTYP, "asynInt32")
   field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))DISK_FREE")
   field(SCAN, "I/O Intr")
   field(FLNK, "$(Sys)$(Dev)Val:FreeTb-I")
   field(EGU,  "Mb")
}

